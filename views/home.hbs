
<ul >
  {{#events}}
    <li>        
        <h2>{{ title }}</h2>
        {{#if image}}  <img src="https://storage.googleapis.com/{{../bucket}}/{{image}}" />  {{/if}}
        <p>{{ description }}</p>
        <p>Location: {{ location }}</p>
        <p>Likes: {{ likes }}
        <form method="POST" action="/event/like">
        <input type="hidden" value="{{id}}" name="id">
        <input type="submit" value="Like">
        </form>
        <form method="POST" action="/event/unlike">
        <input type="hidden" value="{{id}}" name="id">
        <input type="submit" value="UN-Like">
        </form>
        </p>
    </li>
  {{/events}}
</ul>
<div>
  <h2>Add an event</h2>
  <a href='/approval'>Approval</a>
    <form action="/event" method="post" enctype="multipart/form-data">
       title: <input name="title" type="text" /> <br />
       description: <input name="description" type="text" /> <br />
       location: <input name="location" type="text" /> <br />
       jpeg image: <input type="file" name="image" id="image" value="" /> <br />
        <input type="hidden" name="image" id="image" value="" />
        <input type="submit" name="submit" value="submit" />
    </form>
  </div>